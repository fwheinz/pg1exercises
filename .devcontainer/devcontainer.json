{
  "image": "mcr.microsoft.com/devcontainers/cpp:dev-ubuntu-24.04",
  "features": {
      "ghcr.io/devcontainers/features/desktop-lite:1": {}
  },
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "desktop"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "/workspaces/pg1exercises/.devcontainer/extensions/oth-1.0.0.vsix",
        "ms-vscode.cpptools"
      ],
      "settings": {
        "workbench.editorAssociations": {
            "*.md": "vscode.markdown.preview.editor"
        }
      }
    }
  },
  "postCreateCommand": "sudo apt -y update && sudo apt -y install libsdl1.2-dev libsdl-ttf2.0-dev libsdl-image1.2-dev openjdk-17-jre"
}
